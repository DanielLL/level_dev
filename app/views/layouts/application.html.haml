!!!
%html(ng-app="LevelDevs")
  %head
    %title LevelDev
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = javascript_include_tag "https://ajax.googleapis.com/ajax/libs/angularjs/1.1.4/angular.min.js"
    = csrf_meta_tags 
  %body
    %nav
      = link_to image_tag("logo-developer.png"), root_url, class: "logo"
      -if developer_signed_in?
        %ul.nav.nav-pills.pull-left.menu
          %li
            = link_to "Areas", areas_path
          %li
            = link_to "Level"
          %li
            = link_to "My Skills", developer_path(current_developer)
          %li
            = link_to "Developers", root_url
        %ul.nav.nav-pills.signin
          %li
            = link_to current_developer.name, edit_developer_path(current_developer)
          %li
            = link_to "Sign out", destroy_developer_session_path, method: :get
      - else
        %ul.nav.nav-pills.session
          %li
            = link_to "Sign up", new_developer_registration_path
          %li  
            = link_to "Sign in", new_developer_session_path
    #content
      = yield
