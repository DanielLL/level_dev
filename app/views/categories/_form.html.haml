- form_for category do |f|
  -if category.errors.any?
    .errors
      %h2
        = pluralize(category.errors.count, 'error') 
        in this form!
      %ul
        - category.errors.full_messages.each do |error|
          %li= error
  %fieldset
    %legend Category
    = f.label :name
    = f.text_field :name
    %br
    = f.label :description
    = f.text_area :description
    %br
    = f.label :percentage
    = f.text_field :percentage
    %br
    = f.submit
