.span11(ondrop="drop(event)" ondragover="allowDrop(event)")
  .span4.profile
    .profile-info
      %h4 #{developer.name}
      %br
      %p
        %span
          Type: 
        #{developer.admin? ? "Admin" : "Developer"}
      %p
        %span
          Email:
        #{developer.email}
      %br
    .progressbar
      .progress
        .bar{ :style => "width: 10%;" }
        .bar.bar-success{ :style => "width: 10%;" }
      %h5.level
        %span Level 
        Junior 2
  .tabs-areas(ng-controller="devSkillsController" ng-init="getAreas(#{developer.id})")
    %ul.nav.nav-tabs
      %li(ng-repeat="area in areas")
        = link_to "{{area.name}}", "#\{{area.id}}", :data => {:toggle=>"tab"}
    .tab-content
      .tab-pane.active
        .select_text
          Select an Area to Drag Skills
      .tab-pane(id="{{area.id}}" ng-repeat="area in areas")
        %ul

.span4.img-rounded{class: "#{current_developer.admin? ? '' : 'disabled'}"}
  .areas_container(ng-controller="devSkillsController" ng-init="getAreas(#{developer.id})")
    %h4 Areas
    .input-append
      %input#appendedInputButton.span3{ :type => "text"}
      %button.btn.search{ :type => "button"}
        %span.icon-search
    %div.areas_list
      %ul.skills_area
        %li.area(id="{{area.id}}"ng-repeat="area in areas")
          %h4
            {{area.name}}
          %ul.skill_list.inline(ondrop="drop(event)" ondragover="allowDrop(event)")
            %li.skill(id="{{skill.id}}" ng-repeat="skill in area.skills" draggable="true" ondragstart="drag(event)" )
              {{skill.name}}
              %input(ng-model="skill.visible" type="checkbox" ng-disabled="#{!current_developer.admin?}")
            %p(ng-show="empty_area($index)")
              this area has no skills yet...

    .button
      %button.btn.btn-yellow(ng-show="#{current_developer.admin?}" type="button" ng-click="updateDevSkills(#{developer.id})") Update Skills
