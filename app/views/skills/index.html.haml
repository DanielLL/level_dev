%h1 Skill index
- if skills.empty?
  %p No Skills found!
- else
  %table
    %tr
      %th Name
      %th Options
    - skills.each do |skill|
      %tr
        %td
          = link_to skill.name, category_skill_path(skill.category, skill)
        %td
          = link_to 'Edit', edit_category_skill_path(skill.category, skill)
          = link_to 'Destroy', category_skill_path(skill.category, skill), method: :delete
%br
= link_to 'Add new skill', new_category_skill_path(skill.category)
|
= link_to 'Back', category_path(params[:id])
