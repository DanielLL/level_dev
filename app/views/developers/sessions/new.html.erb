<div class = "form-sign-in background-white img-rounded">
<h3>Sign in</h3>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="control-group">
    <%= f.email_field :email, :autofocus => true, :class => "input-block-level", :placeholder => "Email" %></div>

  <div class="control-group">
  <%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, :class => "checkbox" %> <%= f.label :remember_me %></div>
  <% end -%>

  <div class = "button"><%= f.submit "Login", :class => "btn" %></div>
<% end %>

<%= render "developers/shared/links" %>
</div>
