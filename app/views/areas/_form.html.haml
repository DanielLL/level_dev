= form_for area do |f|
  - if area.errors.any?
    .errors
      %h2
        = pluralize(area.errors.count, 'error') 
        in this form!
      %ul
        - area.errors.full_messages.each do |error|
          %li= error
  %fieldset
    %legend Area
    = f.label :name
    = f.text_field :name
    %br
    = f.label :description
    = f.text_area :description
    %br
    = f.label :percentage
    = f.text_field :percentage
    %br
    = f.submit
